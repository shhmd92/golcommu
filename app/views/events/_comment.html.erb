<%= form_with(model: [object, @comment] ) do |f| %>
      <%= hidden_field_tag :event_id, object.id %>
      <%= f.text_field :content %>
      <br>
      <%= f.submit 'コメントする' %>
    <% end %>

<h2>コメント一覧</h2>
    <% @comments.each do |c| %>
    <div>
      <div class="user-username"><%= link_to @event.user.username, user_path(@event.user) %></div>
      <%= c.content %>
    </div>
    <% end %>