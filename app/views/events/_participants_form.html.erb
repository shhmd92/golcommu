<% if current_user.already_participated?(event) %>
  <%= render 'layouts/modal', {mode: ApplicationHelper::STOP_PARTICIPATE_EVENT_MODAL_MODE, object: event} %>
  <button type="button" class="btn btn-primary mt-1" data-toggle="modal" data-target="#modal">参加をやめる</button>
<% else %>
  <%= render 'layouts/modal', {mode: ApplicationHelper::PARTICIPATE_EVENT_MODAL_MODE, object: event} %>
  <button type="button" class="btn btn-primary mt-1" data-toggle="modal" data-target="#modal">参加する</button>
<% end %>
<h2>参加者</h2>
<% event.participant_users.each do |user| %>
<li><%= user.name %></li>
<% end %>