<div class="eventList-card">
  <div class="eventList-image">
    <%= link_to event_path(event_card) do %>
      <% if event_card.image?%>
        <%= image_tag event_card.image.url, class: 'event-img-card' %>
      <% else %>
        <%= image_tag 'fallback/no_image.png', class: 'event-img-card' %>
      <% end %>
    <% end %>
  </div>

  <div class="eventList-body">
    <div class="eventList-body-title">
      <%= link_to event_path(event_card) do %>
        <%= event_card.title %>
      <% end %>
    </div>

    <div class="eventList-body-item">
      主催者：
      <%= link_to user_path(event_card.user) do %>
        <%= event_card.user.username %>
      <% end %>
    </div>

    <div class="eventList-body-item">
      日付：<%= event_card.event_date %>&nbsp;&nbsp;場所：<%= event_card.user.username %>
    </div>

    <div class="eventList-body-item">
      参加人数：<%= event_card.participants.count %>／<%= event_card.participants.count %>
    </div>

    <div class="eventList-body-item">
      <%= event_card.content %>
    </div>
  </div>

  <div class="eventList-btn">
    <% if user_signed_in? %>
      <%= render 'events/like_form', object: event_card %>
    <% end %>
    <% if current_user?(event_card.user) || current_user.admin? %>
      <a class="btn eventList-delete bg-danger text-white" data-toggle="modal" data-target="#modal">
        削除&nbsp;<i class="fa fa-trash" aria-hidden="true"></i>
      </a>
    <% end %>
  </div>
</div>
<%= render 'layouts/modal', {mode: ApplicationHelper::DELETE_EVENT_MODAL_MODE, object: event_card} %>