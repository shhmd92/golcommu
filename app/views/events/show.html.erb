<h1>投稿詳細ページ</h1>
<h3><%= @event.user.email %></h3>
<h3><%= @event.title %></h3>
<h3><%= @event.content %></h3>

<!-- いいね -->
<%= render 'events/like_form', event: @event %>
<!-- 参加者 -->
<%= render 'events/participants_form', event: @event %>

<h2>コメント一覧</h2>
<% @comments.each do |c| %>
<div>
  <div class="user-username"><%= link_to @event.user.username, user_path(@event.user) %></div>
  <%= c.content %>
</div>
<% end %>

<%= form_with(model: [@event, @comment] ) do |f| %>
<%= hidden_field_tag :event_id, @event.id %>
<%= f.text_field :content %>
<br>
<%= f.submit 'コメントする' %>
<% end %>
<%= link_to "ホームへ戻る", root_path %>