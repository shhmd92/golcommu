<div class="page">
  <div class="mid-white-panel">
    <h1 class="text-info">パスワード変更</h1>

    <%= form_with(model: resource, as: resource_name, url: password_path(resource_name),
      html: { method: :put }, local: true) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= render "devise/shared/edit_form_item", form: f %>
      <%= f.hidden_field :reset_password_token %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>