<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_with(model: @user, url: user_registration_path, id: 'edit_user', class: 'edit_user', html: { method: :put }, local: true) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<!-- プロフィール画像 -->
<div class="circle-avatar">
  <% if current_user.persisted? && current_user.avatar? %>
  <%= image_tag current_user.avatar.to_s %>
  <label><%= f.check_box :remove_avatar %> 画像を削除</label>
  <% else %>
  <%= image_tag 'fallback/default_user_avatar.png' %>
  <%= f.hidden_field :avatar_cache %>
  <% end %>
  <label for="event_img" class="btn submit-btn" style="cursor:pointer;">
    <div style="white-space: nowrap;">画像を変更</div>
    <%= f.file_field :avatar, id: 'event_img', class: "d-none" %>
  </label>
</div>

<div class="field">
  <%= f.label :自己紹介 %><br>
  <%= f.text_area :introduction %>
</div>

<!-- ラジオボタンにしたい -->
<div class="field">
  <%= f.label :アベレージスコア %><br>
  <%= f.select :average_score, User.average_scores.keys,{prompt: '選択してください'}, class: 'form-control btn btn-info' %>
</div>

<!-- ラジオボタンにしたい -->
<div class="field">
  <%= f.label :プレータイプ %><br>
  <%= f.select :play_type, User.play_types.keys,{prompt: '選択してください'}, class: 'form-control btn btn-info' %>
</div>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>

<div class="field">
  <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
  <%= f.password_field :password, autocomplete: "new-password" %>
  <% if @minimum_password_length %>
  <br />
  <em><%= @minimum_password_length %> characters minimum</em>
  <% end %>
</div>

<div class="field">
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
</div>

<div class="field">
  <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
  <%= f.password_field :current_password, autocomplete: "current-password" %>
</div>

<div class="actions">
  <%= f.submit "Update" %>
</div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy?
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
</p>

<%= link_to "Back", :back %>