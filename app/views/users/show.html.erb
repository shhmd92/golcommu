<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.username %>
      </h1>
      フォロー
      <div class="status-value" id="following_<%= @user.id %>"><%= @user.following.count.to_s(:delimited) %></div>
      フォロワー
      <div class="status-value" id="followed_<%= @user.id %>"><%= @user.followers.count.to_s(:delimited) %></div>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.events.any? %>
    <h3>Microposts (<%= @user.events.count %>)</h3>
    <ol class="events">
      <%= render partial: 'events/event_card', collection: @events %>
    </ol>
    <%= paginate(@events) %>
    <% end %>
  </div>
</div>