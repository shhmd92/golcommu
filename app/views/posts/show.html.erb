<h1>投稿詳細ページ</h1>
<h3><%= @post.user.email %></h3>
<h3><%= @post.title %></h3>
<h3><%= @post.content %></h3>

<h2>コメント一覧</h2>
<% @comments.each do |c| %>
<div>
  <div class="user-username"><%= link_to @post.user.username, user_path(@post.user) %></div>
  <%= c.content %>
</div>
<% end %>

<%= form_with(model: [@post, @comment] ) do |f| %>
<%= hidden_field_tag :post_id, @post.id %>
<%= f.text_field :content %>
<br>
<%= f.submit 'コメントする' %>
<% end %>
<%= link_to "ホームへ戻る", root_path %>